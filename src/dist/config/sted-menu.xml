<?xml version="1.0" encoding="ISO-8859-1" standalone="yes"?>
<!DOCTYPE
        menubar
        [
                <!ELEMENT menubar (menu+, menupopup*)    >
                <!ELEMENT menuitem (menuitem*)*>
                <!ELEMENT menuitemref EMPTY>
                <!ELEMENT menu (menuitem*, menuitemref*, menu*)*>
                <!ELEMENT menupopup (menuitem*, menuitemref*, menu*)*    >
                <!ATTLIST menubar
                        name ID #REQUIRED
                        toolBarName CDATA #IMPLIED
                        description CDATA "enter menubar description here"
                        >
                <!ATTLIST menuitem
                        name CDATA #REQUIRED
                        type CDATA "javax.swing.JMenuItem"
                        mnemonic CDATA #IMPLIED
                        accelerator CDATA "#IMPLIED"
                        tooltip CDATA "Menu item"
                        icon CDATA #IMPLIED
                        action CDATA #IMPLIED
                        actionCommand CDATA #IMPLIED
                        actionEnabled (true|false) "true"
                        actionMode (on|off) "on"
                        listener CDATA #IMPLIED
                        toolButton CDATA "javax.swing.JButton"
                        toolButtonVisible (true|false) "true"
                        toolButtonTextVisible (true|false) "false"
                        >
                <!ATTLIST menuitemref
                        name CDATA #REQUIRED
                        >
                <!ATTLIST menupopup
                        name ID #REQUIRED
                        >
                <!ATTLIST menu
                        name ID #REQUIRED
                        type CDATA "javax.swing.JMenu"
                        mnemonic CDATA #REQUIRED
                        action CDATA #IMPLIED
                        toolButtonVisible (true|false) "false"
                        actionEnabled (true|false) "true"
                        >
                ]>

<menubar
        name="STED-MenuBar"
        toolBarName="STED-MenuBar"
        description="The STED Application MenuBar">

    <menu
            name="FontMap"
            mnemonic="F"
    >
        <menuitem
                name="New"
                mnemonic="N"
                accelerator="control N"
                tooltip="Create a New FontMap"
                icon="images/new.png"
                action="sted.actions.NewFontMapAction"
                actionCommand="New"
        />
        <menuitem
                name="Open..."
                mnemonic="O"
                accelerator="control O"
                tooltip="Open Existing FontMap"
                icon="images/load.png"
                action="sted.actions.OpenFontMapAction"
                actionCommand="Open..."
        />
        <menuitem
                name="::separator"/>
        <menu
                name="ReOpen"
                type="javax.swing.JMenu"
                mnemonic="O"
                action="sted.actions.ReOpenAction"
                actionEnabled="false"
                toolButtonVisible="false"
        >
            <menuitem
                    name="::separator"/>
            <menuitem
                    name="Clear List"
                    tooltip="Clear the list of ReOpen FontMap"
                    action="sted.actions.ClearReOpenAction"
                    actionCommand="ClearList"
                    actionEnabled="true"
                    toolButtonVisible="false"
            />
        </menu>
        <menuitem
                name="::separator"/>
        <menuitem
                name="Save"
                mnemonic="S"
                accelerator="control S"
                tooltip="Save FontMap"
                icon="images/save.png"
                action="sted.actions.SaveFontMapAction"
                actionCommand="Save"
                actionEnabled="false"
        />
        <menuitem
                name="Save As..."
                mnemonic="A"
                tooltip="Save FontMap As"
                icon="images/saveas.png"
                action="sted.actions.SaveAsAction"
                actionCommand="Save As..."
                actionEnabled="false"
                toolButtonVisible="false"
        />
        <menuitem
                name="::separator"/>
        <menuitem
                name="ReLoad from Disk"
                mnemonic="k"
                accelerator="control K"
                tooltip="ReLoad Existing FontMap"
                icon="images/reload.png"
                action="sted.actions.LoadFontMapAction"
                actionCommand="ReLoad"
                actionEnabled="false"
                toolButtonVisible="false"
        />
        <menuitem
                name="::separator"/>
        <menuitem
                name="Close"
                mnemonic="C"
                accelerator="control F4"
                tooltip="Close FontMap"
                icon="images/close.png"
                action="sted.actions.CloseAction"
                actionCommand="Close"
                actionEnabled="false"
                toolButtonVisible="false"
        />
        <menuitem
                name="::separator"/>
        <menuitem
                name="Exit"
                mnemonic="X"
                tooltip="Exit"
                action="sted.actions.ExitAction"
                actionCommand="Exit"
                toolButtonVisible="false"
        />
    </menu>
    <menu
            name="Edit"
            mnemonic="E"
    >
        <menuitem
                name="Undo"
                mnemonic="u"
                accelerator="control Z"
                tooltip="Undo Edit"
                icon="images/undo.png"
                action="sted.actions.UndoAction"
                actionEnabled="false"
                actionCommand="Undo"
        />
        <menuitem
                name="Redo"
                mnemonic="r"
                accelerator="control shift Z"
                tooltip="Redo Edit"
                icon="images/redo.png"
                action="sted.actions.RedoAction"
                actionEnabled="false"
                actionCommand="Redo"
        />
        <menuitem
                name="::separator"/>
        <menuitem
                name="Cut"
                mnemonic="t"
                accelerator="control X"
                tooltip="Cut Selected Mapping"
                icon="images/cut.png"
                action="sted.actions.CutAction"
                actionCommand="Cut"
                actionEnabled="false"
        />
        <menuitem
                name="Copy"
                mnemonic="C"
                accelerator="control C"
                tooltip="Copy Selected Mapping"
                icon="images/copy.png"
                action="sted.actions.CopyAction"
                actionCommand="Copy"
                actionEnabled="false"
        />
        <menuitem
                name="Paste"
                mnemonic="P"
                accelerator="control V"
                tooltip="Paste"
                icon="images/paste.png"
                action="sted.actions.PasteAction"
                actionCommand="Paste"
                actionEnabled="false"
        />
        <menuitem
                name="::separator"/>
        <menuitem
                name="Select All"
                mnemonic="A"
                accelerator="control A"
                tooltip="Select All Mapping"
                action="sted.actions.SelectAllAction"
                actionCommand="Select All"
                actionEnabled="false"
                toolButtonVisible="false"
        />
        <menuitem
                name="::separator"/>
        <menuitem
                name="Delete"
                mnemonic="D"
                accelerator="DELETE"
                tooltip="Delete Selected Mapping"
                icon="images/delete.png"
                action="sted.actions.DeleteAction"
                actionCommand="Delete"
                actionEnabled="false"
                toolButtonVisible="false"
        />
    </menu>
    <menu
            name="Transliterate"
            mnemonic="T"
    >
        <menuitem
                name="Input"
                mnemonic="I"
                accelerator="control alt I"
                tooltip="Select Input file - source"
                icon="images/input.png"
                action="sted.actions.FileSelectAction"
                actionEnabled="false"
                actionCommand="Input"
        />
        <menuitem
                name="Output"
                mnemonic="O"
                accelerator="control alt O"
                tooltip="Select Output file - target"
                icon="images/output.png"
                action="sted.actions.FileSelectAction"
                actionEnabled="false"
                actionCommand="Output"
        />
        <menuitem
                name="::separator"/>
        <menuitem
                name="Convert"
                mnemonic="C"
                accelerator="control alt C"
                tooltip="Convert based on the current FontMap"
                icon="images/convert.png"
                action="sted.actions.TransliterateAction"
                actionCommand="Convert"
                actionEnabled="false"
        />
        <menuitem
                name="Stop"
                mnemonic="S"
                accelerator="control alt S"
                tooltip="Stop Conversion"
                icon="images/stop.png"
                action="sted.actions.TransliterateStopAction"
                actionCommand="Stop"
                actionEnabled="false"
        />
    </menu>
    <menu
            name="Options"
            mnemonic="O"
    >
        <menuitem
                name="Reverse Transliterate"
                type="javax.swing.JCheckBoxMenuItem"
                mnemonic="R"
                accelerator="control alt R"
                tooltip="Transliterate in Reverse direction"
                action="sted.actions.ItemListenerAction"
                actionCommand="Reverse"
                actionMode="off"
                toolButton="javax.swing.JCheckBox"
                toolButtonVisible="false"
        />
        <menuitem
                name="Preserve &lt;Tags&gt;"
                type="javax.swing.JCheckBoxMenuItem"
                mnemonic="P"
                accelerator="control alt P"
                tooltip="Dont Transliterate words in tags"
                action="sted.actions.ItemListenerAction"
                actionCommand="Preserve"
                actionMode="off"
                toolButton="javax.swing.JCheckBox"
                toolButtonTextVisible="true"
        />
        <menuitem
                name="::separator"/>
        <menu
                name="Look &amp; Feel"
                mnemonic="L"
        />
    </menu>
    <menu
            name="View"
            mnemonic="V"
    >
        <menuitem
                name="Toolbar"
                type="javax.swing.JCheckBoxMenuItem"
                mnemonic="T"
                accelerator="control shift T"
                tooltip="Show/Hide Toolbar"
                action="sted.actions.ViewAction$ViewToolBar"
                actionCommand="ViewTool"
                toolButtonVisible="false"
        />
        <menuitem
                name="Status Bar"
                type="javax.swing.JCheckBoxMenuItem"
                mnemonic="S"
                accelerator="control shift S"
                tooltip="Show/Hide Status Bar"
                action="sted.actions.ViewAction$ViewStatus"
                actionCommand="ViewStatus"
                toolButtonVisible="false"
        />
        <menuitem
                name="::separator"/>
        <menuitem
                name="Mapping Rules"
                type="javax.swing.JCheckBoxMenuItem"
                mnemonic="M"
                accelerator="control shift M"
                tooltip="Show/Hide Mapping Details"
                action="sted.actions.ViewAction$ViewMapping"
                actionCommand="ViewMapping"
                actionEnabled="false"
                toolButtonVisible="false"
        />
        <menuitem
                name="Mapping Preview"
                type="javax.swing.JCheckBoxMenuItem"
                mnemonic="A"
                accelerator="control shift A"
                tooltip="Show/Hide Sample Text"
                action="sted.actions.ViewAction$ViewSample"
                actionCommand="ViewSample"
                actionEnabled="false"
                toolButtonVisible="false"
        />
    </menu>
    <menu
            name="Samples"
            mnemonic="S"
    >
    </menu>
    <menu
            name="Help"
            mnemonic="H"
    >
        <menuitem
                name="Help Topics"
                mnemonic="T"
                accelerator="F1"
                tooltip="Display Help Topics"
                icon="images/help.png"
                action="sted.actions.HelpAction"
                actionCommand="Help"
        />
        <menuitem
                name="::separator"/>
        <menuitem
                name="About"
                mnemonic="A"
                tooltip="About STED"
                icon="images/sted.gif"
                action="sted.actions.AboutAction"
                actionCommand="About"
        />
    </menu>

    <menupopup name="Mapping">
        <menuitemref
                name="Undo"
        />
        <menuitemref
                name="Redo"
        />
        <menuitemref
                name="::separator"/>
        <menuitemref
                name="Cut"
        />
        <menuitemref
                name="Copy"
        />
        <menuitemref
                name="Paste"
        />
        <menuitemref
                name="::separator"/>
        <menuitemref
                name="Select All"
        />
        <menuitemref
                name="::separator"/>
        <menuitemref
                name="Delete"
        />
    </menupopup>
</menubar>


